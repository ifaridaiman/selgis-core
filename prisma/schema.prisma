generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url = env("DATABASE_URL")
}


model Projek{
  id String @id @default(uuid())
  lotNumber String
  daerah String
  mukim String
  koordinat_x Float
  koordinat_y Float
  tajukProjek String
  jenisPermohonan String
  noFail String
  status String
  bahagian String
  ulasans Ulasan[]
  rings String
  panjang String
  luas String 
  tajukSurat String


}

model Ulasan{
  id Int @id @default(autoincrement())
  projek Projek @relation(fields: [projekId], references: [id])
  projekId String
  ulasan String
  folderPath String?
  
}